{
    "root": true,
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended"
    ],
    "ignorePatterns": ["*.html", "node_modules/", "dist"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "18.2"
      }
    },
    "plugins": [
      "react-refresh"
    ],
    "rules": {
      "react-refresh/only-export-components": [
        "warn",
        { "allowConstantExport": true }
      ],
      "quotes": ["error", "single"],
      "semi": ["error", "never"],
      "object-curly-spacing": ["error", "always"],
      "no-multiple-empty-lines": ["error", { "max": 1 }],
      "indent": ["error", 2],
      "react/jsx-one-expression-per-line": "off", // to stop breaking JSX into multiple lines
      "react/jsx-no-target-blank": ["error", { "enforceDynamicLinks": "always", "allowReferrer": true }] // to modify link behavior
    }
  }
  